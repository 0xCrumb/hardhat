{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "incremental": true,
    "rootDirs": ["./src", "./test"],
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "*": ["*"]
    }
  },
  "exclude": ["dist", "node_modules"],
  "include": ["./test", "./src"]
}
